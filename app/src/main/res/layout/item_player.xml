<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_col1_item"
        style="?attr/textAppearanceBodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        tools:text="Atlanta Hawks"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textview_col2_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_col2_item"
        style="?attr/textAppearanceBodyMedium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Atlanta"
        app:layout_constraintHorizontal_weight="4"
        android:layout_marginEnd="2dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_col1_item"
        app:layout_constraintEnd_toStartOf="@+id/textview_col3_item"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textview_col1_item" />

    <TextView
        style="?attr/textAppearanceBodyMedium"
        android:id="@+id/textview_col3_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="East"
        app:layout_constraintHorizontal_weight="3"
        android:layout_marginEnd="2dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textview_col2_item"
        app:layout_constraintEnd_toStartOf="@+id/button_open"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textview_col2_item" />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.IconButton"
        android:id="@+id/button_open"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_send_24px"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/textview_col3_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textview_col3_item"
        app:layout_constraintTop_toTopOf="@+id/textview_col3_item"
        android:contentDescription="@string/description_back" />
</androidx.constraintlayout.widget.ConstraintLayout>